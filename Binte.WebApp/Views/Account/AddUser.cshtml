@{
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}
@model UserAddViewModel

<div class="row">
    <div class="col-12">
        <div class="card card-info">
            <div class="card-header">
                <h3 class="card-title">Kullanıcı Ekle</h3>
            </div>
            <form class="form-horizontal" action="/Account/AddUser" method="post">
                <div class="card-body">
                    <div class="form-group row">
                        @Html.BSDisplayFor(p=>p.Name)
                        <div class="col-sm-10">
                            @Html.BSTextBox(p=>p.Name)
                            @Html.ValidationMessageFor(p=>p.Name)
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.BSDisplayFor(p=>p.Surname)
                        <div class="col-sm-10">
                            @Html.BSTextBox(p=>p.Surname)
                            @Html.ValidationMessageFor(p=>p.Surname)
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.BSDisplayFor(p=>p.EmailAddress)
                        <div class="col-sm-10">
                            @Html.BSTextBox(p=>p.EmailAddress)
                            @Html.ValidationMessageFor(p=>p.EmailAddress)
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.BSDisplayFor(p=>p.IdentityNumber)
                        <div class="col-sm-10">
                            @Html.BSTextBox(p=>p.IdentityNumber)
                            @Html.ValidationMessageFor(p=>p.IdentityNumber)
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.BSDisplayFor(p=>p.Birthdate)
                        <div class="col-sm-10">
                            @Html.BSTextBox(p=>p.Birthdate)                        
                            @Html.ValidationMessageFor(p=>p.Birthdate)
                        </div>
                    </div>                    
                    <div class="form-group row">
                        @Html.BSDisplayFor(p=>p.EducationCode)
                        <div class="col-sm-10">
                            @Html.BSDropDown(p=>p.EducationCode,Model.EducationList)
                            @Html.ValidationMessageFor(p=>p.EducationCode)
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.BSDisplayFor(p=>p.GenderCode)
                        <div class="col-sm-10">
                            @Html.BSDropDown(p=>p.GenderCode,Model.GenderList)
                            @Html.ValidationMessageFor(p=>p.GenderCode)
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.BSDisplayFor(p=>p.Role)
                        <div class="col-sm-10">
                            @Html.BSDropDown(p=>p.Role,Model.RoleList)
                            @Html.ValidationMessageFor(p=>p.Role)
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-info float-right">Kaydet</button>
                    <button href="/Account/Users" class="btn btn-default float-right">Vazgeç</button>
                </div>
            </form>
        </div>
    </div>
</div>